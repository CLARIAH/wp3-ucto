#/bin/sh

exe=../src/ucto

\rm -rf batch_out

$exe -L nld -B folia1.xml test.nl.txt >& uit1
cat < uit1

$exe -L nld -B folia1.xml test.nl.txt folia7.xml -O batch_out
cat < batch_out/folia1.ucto.xml
cat < batch_out/test.nl.txt.ucto
cat < batch_out/folia7.ucto.xml

$exe -L nld -I batch_in -O batch_out folia1.xml >& uit2
cat < uit2
$exe -L nld -B -I batch_in -O batch_out folia1.xml >& uit3
cat < uit3

$exe -L nld -B -I batch_in -O batch_out
cat < batch_out/folia4.ucto.xml
cat < batch_out/testpunctuation.txt.ucto
cat < batch_out/folia8.ucto.xml
